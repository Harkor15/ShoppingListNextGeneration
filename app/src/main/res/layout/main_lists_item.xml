<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="Item name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_list_item_name"
            app:layout_constraintTop_toTopOf="@+id/main_list_item_delete_icon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/main_list_item_shared_icon"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/main_list_item_delete_icon"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/ic_delete_black_24dp"
            android:id="@+id/main_list_item_delete_icon" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:padding="7dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/ic_people_black_24dp"
            android:id="@+id/main_list_item_shared_icon"
            app:layout_constraintEnd_toStartOf="@+id/main_list_item_delete_icon"
            app:layout_constraintTop_toTopOf="@+id/main_list_item_delete_icon"
            app:layout_constraintBottom_toBottomOf="@+id/main_list_item_delete_icon" android:padding="7dp"
            android:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>
