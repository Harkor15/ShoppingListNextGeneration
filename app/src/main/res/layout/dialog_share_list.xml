<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/BackgroundColor">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@color/zxing_status_text"
            android:id="@+id/share_qr_code"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/share_title" android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/send_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/share_send_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/share_copy_code" android:layout_marginTop="8dp"
            style="@style/MyButtons" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="@string/copy_code_to_clipboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/share_copy_code" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/share_qr_code" style="@style/MyButtons"/>
    <TextView
            android:text="@string/share_your_shopping_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_title" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>