<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                           android:layout_height="wrap_content">
    <CheckBox
            android:text="CheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_check_box" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            app:layout_constraintEnd_toStartOf="@+id/item_delete_icon" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/ic_delete_black_24dp"
            android:id="@+id/item_delete_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_check_box"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp" app:layout_constraintBottom_toBottomOf="@+id/item_check_box"
            android:padding="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>